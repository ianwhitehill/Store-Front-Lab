<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Moivie Car Rental</title>
    <meta name="description" content="">

    <link rel="shortcut icon" type="image/x-icon" href="~/Content/img/gallery/123456.jpg" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" />
    <!--
    Motor Template
    http://www.templatemo.com/tm-463-motor
    -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @Styles.Render("~/Content/css")
</head>
<body class="about-page">

    <!-- Preloader -->
    <div id="loader-wrapper">
        <div id="loader"></div>
        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>
    </div>
    <!-- End Preloader -->

    <section class="templatemo-top-section">
        <div class="templatemo-header">
            <img class="templatemo-header-img" src="~/Content/img/header.png" alt="Header">
            <h1 class="templatemo-site-name">Movie Car</h1>
            <div class="mobile-menu-icon">
                <i class="fa fa-bars"></i>
            </div>
            <div class="templatemo-nav-container">
                <nav class="templatemo-nav">
                    <ul>
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>

                        <li>@Html.ActionLink("Cars", "Index", "Cars")</li>

                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                        <li>@Html.ActionLink("Cart", "Index", "ShoppingCart")</li>

                        <li>@Html.Partial("_LoginPartial")</li>


                    </ul>
                </nav>
            </div>
        </div>
    </section>

    <!--Main content-->
    <div class="container">
        @RenderBody()
    </div>
    <!--Footer content-->
    <footer class="tm-footer">
        <div class="container">
            <div class="row margin-bottom-60">
                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {<nav class="col-lg-4 col-md-4 tm-footer-nav tm-footer-div">
                        <h3 class="tm-footer-div-title">Employee Menu</h3>
                        <ul>

                            <li>@Html.ActionLink("Employees", "Index", "Employees")</li>
                            <li>@Html.ActionLink("Customers", "Index", "Customers")</li>
                            <li>@Html.ActionLink("Departments", "Index", "Departments")</li>
                            <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                            <li>@Html.ActionLink("Managers", "Index", "Managers")</li>
                        </ul>
                    </nav>}
                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {<nav class="col-lg-4 col-md-4 tm-footer-nav tm-footer-div">
                        <h3 class="tm-footer-div-title">User Menu</h3>
                        <ul>

                            <li>@Html.ActionLink("Roles", "Index", "RolesAdmin")</li>
                            <li>@Html.ActionLink("User", "Index", "UserAdmin")</li>
                            <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                        </ul>
                    </nav>}
                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {<nav class="col-lg-4 col-md-4 tm-footer-nav tm-footer-div">
                        <h3 class="tm-footer-div-title">Vehicle Menu</h3>
                        <ul>
                            <li>@Html.ActionLink("Cars", "Index", "Cars")</li>
                            <li>@Html.ActionLink("Makes", "Index", "Makes")</li>
                            <li>@Html.ActionLink("Models", "Index", "Models")</li>
                            <li>@Html.ActionLink("Movies", "Index", "Movies")</li>
                            <li>@Html.ActionLink("FuelTypes", "Index", "FuelTypes")</li>
                            <li>@Html.ActionLink("Status", "Index", "Status")</li>
                        </ul>
                    </nav>}
            </div>
            <div class="row tm-copyright">
                <p class="col-lg-12 small copyright-text text-center">Copyright &copy; @DateTime.Now.Year Ian Whitehill</p>
            </div>
        </div>
    </footer> <!-- Footer content-->
    <!-- JS -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
    <script>
        $(window).load(function () {
            $('.flexslider').flexslider({
                animation: "slide",
                slideshow: false,
                prevText: "&#xf104;",
                nextText: "&#xf105;"
            });

            // Remove preloader
            // https://ihatetomatoes.net/create-custom-preloading-screen/
            $('body').addClass('loaded');
        });
    </script>
</body>
</html>

