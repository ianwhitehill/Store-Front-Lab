@model IEnumerable<StoreFrontLab.DATA.EF.Car>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Make.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Movie.MovieTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DailyCost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Make.Makes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Make.Model.Models)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Movie.MovieTitle)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Image)*@
            <a href="@Url.Action("Details", "Cars", new { id = item.VIN })">
                <img src="~/Content/carpics/t_@item.Image" alt="carpic" title="CarPic" class="img-thumbnail img-circle" style="max-height: 3em" />
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status.StatusType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DailyCost)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.VIN }) |
            @Html.ActionLink("Details", "Details", new { id = item.VIN }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.VIN })
        </td>
    </tr>
}

</table>
